@model TennisRanking.ViewModels.AmistosoVM
@{
    ViewData["Title"] = "Agendar Amistoso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Agendar Amistoso</h4>
            <p>Selecione uma agenda e um tenista convidado para este amistoso</p>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("RegistrarAmistoso", "Jogo", FormMethod.Post, new { amistosoVM = Model }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Jogo.TenistaBId,"Tenista")
                    @Html.DropDownListFor(m => m.Jogo.TenistaBId, new SelectList(Model.Tenistas, "Id", "DisplayNome"), "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Jogo.TenistaBId)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Jogo.AgendaId, "Agenda")
                    @Html.DropDownListFor(m => m.Jogo.AgendaId, new SelectList(Model.AgendasPossiveis, "Id", "DisplayAgenda"), "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Jogo.AgendaId)
                </div>
                <br />
                <div class="form-group">
                    @Html.HiddenFor(m => m.TenistaA.Id)
                </div>
                <div class="form-group">
                    <input type="submit" value="Agendar" class="btn btn-primary rounded-0 " />
                    <a asp-area="" asp-controller="Jogo" asp-action="MinhaAgenda" class="btn btn-primary rounded-0 "><i class="fas fa-fast-backward"></i>Voltar</a>
                </div>
            }
        </div>
    </div>
</div>